            id++;
            $("#Start").hide();
            $.ajax({
                method: "POST",
                url: "/Home/DbQuestionsList",
                data: { id: id },
                success: function (res) {
                    var data = JSON.parse(res);
                    var question = $("#Question");
                    question.empty();
                    $.each(data, function (index, val) {
                        var row = `<p>${val.title}</p>`;
                        question.append(row);
                       /* console.log(val.title);*/
                    });
