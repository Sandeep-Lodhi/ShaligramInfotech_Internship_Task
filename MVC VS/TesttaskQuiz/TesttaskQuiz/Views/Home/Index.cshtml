                success: function (res) {
                    var data = JSON.parse(res);
                    var Answers = $("#Answers");
                    Answers.empty();
                    $.each(data, function (index, val) {
                        var row = `<p><input type="radio" id="q${val.Id}" name="hhh" value="${val.Id}">
