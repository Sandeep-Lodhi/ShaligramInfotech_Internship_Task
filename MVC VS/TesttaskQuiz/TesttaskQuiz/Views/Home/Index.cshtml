            var Id = $('input:radio[name=hhh]:checked').val();
            console.log(id);
            console.log(Id);
            var obj = {
                Id: Id,
            };
            arr.push(obj);

            $.ajax({
                method: "GET",
                url: "/Home/Resultlist",
                data: { Id: Id },
                success: function (res) {
                    var mark = JSON.parse(res);
                     marks +=mark;
                    var obj2 = {
                        mark: mark
                    };
                   console.log(marks);
                   
                    totalmarks.push(obj2);
                },
            });







