@model IEnumerable<StudentManagement.Models.Context.State>

@{
    ViewBag.Title = "RetriveStates";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="mdl-grid ui-tables">
    <div class="mdl-cell mdl-cell--6-col-desktop mdl-cell--6-col-tablet mdl-cell--4-col-phone">
        <div class="mdl-card mdl-shadow--2dp">
            <div class="mdl-card__title">
                <h1 class="mdl-card__title-text">All Countries</h1>
            </div>
            <div class="mdl-card__supporting-text no-padding">
                <table class="mdl-data-table mdl-js-data-table bordered-table stripped-table" data-upgraded=",MaterialDataTable">
                    <thead>
                        <tr>
                            <th class="mdl-data-table__cell--non-numeric">@Html.DisplayNameFor(model => model.StateId)</th>
                            <th class="mdl-data-table__cell--non-numeric">@Html.DisplayNameFor(model => model.StateName)</th>
                            <th class="mdl-data-table__cell--non-numeric">@Html.DisplayNameFor(model => model.Country.CountryName)</th>
                            <th class="mdl-data-table__cell--non-numeric">Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                        <tr>
                            <td class="mdl-data-table__cell--non-numeric">@Html.DisplayFor(modelItem => item.StateId)</td>
                            <td class="mdl-data-table__cell--non-numeric">@Html.DisplayFor(modelItem => item.StateName)</td>
                            <td class="mdl-data-table__cell--non-numeric">@Html.DisplayFor(modelItem => item.Country.CountryName)</td>

                            <td class="mdl-data-table__cell--non-numeric">
                                @Html.ActionLink("Edit",
                                         "CreateState",
                                         "State",
                                         new { StateId = item.StateId },
                                         new { @class = "label label--mini color--purple navLinkStyle" }
                                        )
                                @Html.ActionLink("Detail",
                                         "StudentDetail",
                                         "Student",
                                         new { CountryId = item.CountryId },
                                         new { @class = "label label--mini background-color--primary navLinkStyle" }
                                        )

                                @Html.ActionLink("Delete",
                                         "DeleteStudent",
                                         "Student",
                                         new { CountryId = item.CountryId },
                                         new { @class = "label label--mini background-color--secondary navLinkStyle" }
                                        )
                            </td>
                        </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
